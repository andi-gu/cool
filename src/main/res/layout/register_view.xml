    <!-- id -->
          <LinearLayout
              android:id="@+id/LinearLayout3"
         android:layout_below="@id/LinearLayout11"
         android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
         android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/comment_input"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
              android:layout_width="68dp"
       android:layout_height="50dp"
            android:layout_marginLeft="2dp"
             android:gravity="center_vertical|right"
            android:text="@string/zzhanghao"
            android:textColor="#000000"
             android:textSize="15sp"  />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="0.46"
            android:background="#FFFFFF"
            android:hint="手机号"
            android:gravity="center_vertical"
              android:inputType="number"
          >

           
        </EditText>
    </LinearLayout>

<!-- 密码 -->          
          <LinearLayout
              android:id="@+id/LinearLayout4"
         android:layout_below="@id/LinearLayout3"
         android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
         android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/comment_input"
       android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
              android:layout_width="68dp"
          android:layout_height="50dp"
            android:layout_marginLeft="2dp"
             android:gravity="center_vertical|right"
            android:text="@string/zmima"
            android:textColor="#000000"
             android:textSize="15sp"  />

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="0.46"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:inputType="textPassword" >

           
        </EditText>
    </LinearLayout>
   
     <!-- 确认密码 -->
          <LinearLayout
              android:id="@+id/LinearLayout5"
         android:layout_below="@id/LinearLayout4"
         android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
         android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:background="@drawable/comment_input"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="68dp"
           android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical|right"
            android:text="@string/zqmima"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_zcmima"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="0.46"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:inputType="textPassword" >

           
        </EditText>
    </LinearLayout>

   <!-- 立刻注册 -->    
          
          <Button
              android:id="@+id/regbutton"
              android:layout_width="85dp"
              android:layout_height="40dp"
              android:layout_below="@+id/LinearLayout5"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="21dp"
              android:background="@drawable/denglu"
              android:text="@string/now"
              android:textColor="#000000"
              android:textSize="15sp" />
		
		<TextView 
 				android:layout_below="@id/regbutton"   
  			   android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
              android:background="#FFFFFF"
              android:textSize="16sp"
              android:layout_marginTop="20dp"
              android:text="注：以上信息不为空"
    
    	/>
</RelativeLayout>